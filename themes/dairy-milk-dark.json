{
  // ======================================================
  // Chocolate Â· Dairy Milk Dark
  // ======================================================
  "name": "Chocolate Dairy Milk Dark",
  "type": "dark",

  // Enable modern semantic highlighting
  "semanticHighlighting": true,

  // ======================================================
  // UI COLORS
  // ======================================================
  "colors": {
    /************* EDITOR *************/
    // Cadbury purple background (not pure black)
    "editor.background": "#1B0B3A",

    // Soft milk-white text (easy on eyes)
    "editor.foreground": "#EDE9FF",

    // Golden cursor
    "editorCursor.foreground": "#FFD966",

    // Selections & highlights
    "editor.selectionBackground": "#5A189A66",
    "editor.selectionHighlightBackground": "#5A189A44",
    "editor.wordHighlightBackground": "#FFFFFF12",
    "editor.wordHighlightStrongBackground": "#FFD96633",

    // Search match
    "editor.findMatchHighlightBackground": "#FFD96655",

    // Bracket matching (important UX)
    "editorBracketMatch.background": "#FFD96633",
    "editorBracketMatch.border": "#FFD966",

    // Line numbers
    "editorLineNumber.foreground": "#9B90C2",
    "editorLineNumber.activeForeground": "#FFFFFF",

    // Diagnostics
    "editorError.foreground": "#FF6B6B",
    "editorWarning.foreground": "#FFD966",
    "editorInfo.foreground": "#9CDCFE",

    // Widgets & focus
    "editorWidget.background": "#24104F",
    "focusBorder": "#FFD966",

    // Generic selection (lists, inputs, etc.)
    "selection.background": "#5A189A66",

    /************* TITLE BAR *************/
    // Top window bar (app title, window controls)
    "titleBar.activeBackground": "#16082F",
    "titleBar.activeForeground": "#EDE9FF",
    "titleBar.inactiveBackground": "#120624",
    "titleBar.inactiveForeground": "#B8AED6",
    "titleBar.border": "#00000040",

    /************* ACTIVITY BAR *************/
    "activityBar.background": "#16082F",
    "activityBar.foreground": "#FFD966",
    "activityBar.inactiveForeground": "#C6BCE680",
    "activityBar.activeBorder": "#FFD966",

    "activityBarBadge.background": "#FFD966",
    "activityBarBadge.foreground": "#1B0B3A",

    /************* SIDEBAR *************/
    "sideBar.background": "#1A0A36",
    "sideBar.foreground": "#E6E1FF",
    "sideBarTitle.foreground": "#FFD966",
    "sideBarSectionHeader.background": "#24104F",

    /************* EDITOR GROUP / TABS (FIXED AREA) *************/
    "tab.activeBackground": "#24104F",
    "tab.inactiveBackground": "#1A0A36",
    "tab.activeBorderTop": "#FFD966",
    "tab.unfocusedActiveBorderTop": "#C792EA",
    "tab.inactiveForeground": "#B8AED6",
    "tab.border": "#00000040",
    "editorGroupHeader.background": "#16082F",
    "editorGroupHeader.tabsBackground": "#16082F",
    "editorGroupHeader.tabsBorder": "#00000040",

    "editorGroup.border": "#00000040",
    "editorGroup.emptyBackground": "#1B0B3A",

    "tab.hoverBackground": "#2F1366",
    "tab.hoverForeground": "#FFFFFF",

    "tab.unfocusedActiveBackground": "#1B0B3A",
    "tab.unfocusedActiveForeground": "#C6BCE6",

    /************* PANEL *************/
    "panel.background": "#16082F",
    "panel.border": "#FFD96644",
    "panelTitle.activeForeground": "#FFD966",
    "panelTitle.inactiveForeground": "#B8AED6",

    /************* STATUS BAR *************/
    "statusBar.background": "#16082F",
    "statusBar.foreground": "#E6E1FF",
    "statusBar.debuggingBackground": "#FFD966",
    "statusBar.debuggingForeground": "#1B0B3A",

    /************* TERMINAL *************/
    "terminal.foreground": "#EDE9FF",
    "terminalCursor.foreground": "#FFD966",
    "terminal.selectionBackground": "#5A189A55",

    /************* BREADCRUMBS *************/
    "breadcrumb.foreground": "#B8AED6",
    "breadcrumb.activeSelectionForeground": "#FFD966",
    "breadcrumbPicker.background": "#24104F",

    /************* INPUTS, MENUS & LISTS *************/
    "dropdown.background": "#24104F",
    "input.background": "#24104F",

    "menu.background": "#16082F",
    "menu.foreground": "#EDE9FF",
    "menu.selectionBackground": "#5A189A66",
    "menu.selectionForeground": "#FFD966",

    "list.activeSelectionBackground": "#5A189A55",
    "list.activeSelectionForeground": "#FFFFFF",
    "list.hoverBackground": "#5A189A33",
    "list.hoverForeground": "#FFD966",

    /************* BUTTON *************/
    "button.background": "#FFD966",
    "button.foreground": "#1B0B3A",

    /************* NOTIFICATIONS *************/
    "notifications.background": "#24104F",
    "notificationLink.foreground": "#FFD966",

    /************* GIT *************/
    "gitDecoration.addedResourceForeground": "#C3E88D",
    "gitDecoration.modifiedResourceForeground": "#FFD966",
    "gitDecoration.deletedResourceForeground": "#FF6B6B",

    /************* MINIMAP *************/
    "minimap.selectionHighlight": "#FFD96633"
  },

  // ======================================================
  // SEMANTIC TOKENS
  // ======================================================
  "semanticTokenColors": {
    "comment": {
      "foreground": "#9B90C2",
      "fontStyle": "italic"
    },
    "string": "#FFD966",
    "keyword": "#C792EA",
    "function": "#D7A86E",
    "method": "#D7A86E",
    "variable": "#EDE9FF",
    "parameter": "#F2A65A",
    "class": "#FFCB6B",
    "property": "#E6B3FF",
    "enumMember": "#C3E88D",
    "number": "#F78C6C",
    "type": "#82AAFF"
  },

  // ======================================================
  // TEXTMATE TOKENS (BACKWARD COMPATIBILITY)
  // ======================================================
  "tokenColors": [
    {
      "scope": "comment",
      "settings": {
        "foreground": "#9B90C2",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "string",
      "settings": {
        "foreground": "#FFD966"
      }
    },
    {
      "scope": ["keyword", "storage.type"],
      "settings": {
        "foreground": "#C792EA"
      }
    },
    {
      "scope": ["entity.name.function", "support.function"],
      "settings": {
        "foreground": "#D7A86E"
      }
    },
    {
      "scope": "variable",
      "settings": {
        "foreground": "#EDE9FF"
      }
    },
    {
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#F78C6C"
      }
    },
    {
      "scope": "entity.name.class",
      "settings": {
        "foreground": "#FFCB6B"
      }
    }
  ]
}
